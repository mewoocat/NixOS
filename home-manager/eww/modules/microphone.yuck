(defwidget microphone_slider []
  (box
    :space-evenly false
    (label
      :text "${microphone.icon}"
      :class {microphone.mute == "true" ? "mic off" : "mic"}
      :style {microphone.mute == "true" ? "font-size: 28px;" : ""}
      :width 24
    )
    (eventbox
      :cursor "pointer"
      :hexpand true
      (scale
        :class "volume-slider"
        :value "${microphone.level}"
        :min 0
        :max 101
        :onchange "amixer set Capture {}% unmute"
      )
    )
  )
)

